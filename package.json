{
  "name": "n8n-mcp",
  "version": "3.0.0",
  "description": "n8n Co-Pilot - Stateless MCP server with live node sync, bulletproof validation, and embedded LLM",
  "main": "dist/main.js",
  "bin": {
    "n8n-mcp": "./dist/main.js"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "start": "node start.js",
    "start:http": "node start.js --http",
    "check": "node start.js --check",
    "setup": "node start.js --setup",
    "build": "tsc -p tsconfig.build.json",
    "build:fast": "tsc -p tsconfig.build.json --skipLibCheck",
    "build:esbuild": "node scripts/build-esbuild.js",
    "dev": "ts-node --transpile-only src/main.ts",
    "dev:http": "ts-node --transpile-only src/main.ts --http",
    "test": "jest --passWithNoTests",
    "lint": "tsc --noEmit",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker build -t n8n-mcp:latest .",
    "db:rebuild": "ts-node src/scripts/rebuild.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zevas1993/One-Stop-Shop-N8N-MCP.git"
  },
  "keywords": [
    "n8n",
    "mcp",
    "model-context-protocol",
    "ai",
    "workflow",
    "automation",
    "copilot",
    "llm"
  ],
  "author": "Romuald Czlonkowski @ www.aiadvisors.pl/en",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zevas1993/One-Stop-Shop-N8N-MCP/issues"
  },
  "homepage": "https://github.com/Zevas1993/One-Stop-Shop-N8N-MCP#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@n8n/n8n-nodes-langchain": "1.120.2",
    "@octokit/rest": "^22.0.0",
    "@playwright/test": "^1.53.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/node-cron": "^3.0.11",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.0",
    "jest": "^29.7.0",
    "n8n": "1.121.3",
    "n8n-core": "1.120.2",
    "n8n-workflow": "1.118.2",
    "node-cron": "^4.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "axios": "^1.10.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "sql.js": "^1.13.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
