{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Debug Consolidated Server (stdio)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/consolidated-server.js",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "🌐 Debug HTTP Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/http-server-single-session.js",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "env": {
        "MCP_MODE": "http",
        "PORT": "3000",
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "🧪 Debug Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${file}",
        "--runInBand",
        "--no-coverage"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "🧪 Debug All Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-coverage"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "🔧 Debug Setup Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/setup.js",
      "args": ["--mode=claude-desktop"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "🗄️  Debug Database Rebuild",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/scripts/rebuild.js",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "📊 Debug Dashboard",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/dashboard/server.js",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "env": {
        "DASHBOARD_PORT": "3001",
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "🔌 Attach to Running Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "🚀 Full Dev Stack",
      "configurations": [
        "Debug HTTP Server",
        "Debug Dashboard"
      ],
      "stopAll": true,
      "preLaunchTask": "npm: build"
    }
  ]
}
